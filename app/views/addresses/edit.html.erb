<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
        	<h2 class="text-center">住所の編集</h2>
        	<div class="box1">
			<% if @address.errors.any? %>
			    <ul>
				<% @address.errors.full_messages.each do |message| %>
				    <li><%= message %></li>
				<% end %>
			    </ul>
			<% end %>
			<%= form_for(@address, url: user_address_path(@user.id, @address.id)) do |f| %>
				<div class="text-center">
					<h5>住所の名前</h5>
					<%= f.text_field :pulldown_name %>
				</div>
				<div class="name1">
					<h5>姓（漢字）</h5>
					<%= f.text_field :family_name,:class=>"form" %>
				</div>
				<div class="name1">
					<h5>名（漢字）※全角入力</h5>
					<%= f.text_field :first_name,:class=>"form" %>
				</div>
				<div class="name1">
					<h5>姓（カナ）</h5>
					<%= f.text_field :family_name_kana,:class=>"form" %>
				</div>
				<div class="name1">
					<h5>名（カナ）※全角入力</h5>
					<%= f.text_field :first_name_kana,:class=>"form" %>
				</div>
				<h5>郵便番号 ※半角入力、ハイフン不要</h5>
				<%= f.text_field :post %>
				<h5>住所</h5>
				<%= f.text_field :a_address %>
				<h5>電話番号 ※半角入力、ハイフン不要</h5>
				<%= f.text_field :phone %>
				<p class="text-center">
					<%= f.submit '保存' %>
				</p>
			<% end %>
		</div>
	</div>
    </div>
</div>
