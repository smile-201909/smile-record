<!DOCTYPE html>
<html>
  <head>
    <title>SmileRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  　<meta charset="utf-8">
    <!-- src="URL" について：add.jsと共通のディレクトリ(= app)が３つ上にあるので . が３つではないのか？ -->
<!--     <script type="text/javascript" src= "...assets/javascripts/add.js"></script> -->
    <script type="text/javascript">
  　　$(function() {
     // 左側の (#"") と同じidの部分に、一番右の (#"")が代入される。
     // $(ターゲット要素).load(読み込まれるURL(相対パス), #読み込まれる部分(そのURLのidで囲った部分))
        $("#artist-outer").load("../artists/new #artist-inner");
        $("#genre-outer").load("../genres/new #genre-inner");
        $("#label-outer").load("../labels/new #label-inner");
  　　})
    </script>

    <!-- GoogleFonts 自家製フォント工房 -->
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">




  </head>

  <body>

<nav>
          <% if user_signed_in? %>

          <div class="clearfix">

            <div class="header-left">
              <li class="logo"><%= link_to products_path do %>ロゴ<% end %></li>
            </div>
            <div class="header-right">
              <li class="search">
                <%= form_tag(search_path, :method => 'get') do %>
                  <%= text_field_tag :search %> <!-- searchはカラム名(productsテーブルに、検索用に新しく作成) -->
                  <%= submit_tag '検索' %>
                <% end %>
              </li>
              <li class="menu-item"><%= link_to user_path(current_user.id) do %>マイページ<% end %></li>

              <li class="menu-item"><%= link_to destroy_user_session_path, method: :delete do %>logout<% end %></li>

              <li class="menu-item"><%= link_to carts_path do %><i class="fa fa-shopping-cart fa-2x "></i><% end %></li>
            </div>
          </div>

          <% elsif administrator_signed_in? %>

          <div class="clearfix">

            <div class="header-left">
              <li class="logo"><%= link_to products_path do %>ロゴ<% end %></li>
            </div>


              <li class="search">
                <%= form_tag(search_path, :method => 'get') do %>
                  <%= text_field_tag :search %> <!-- searchはカラム名(productsテーブルに、検索用に新しく作成) -->
                  <%= submit_tag '検索' %>
                <% end %>
              </li>
            <div class="header-right">
              <li class="menu-item"><%= link_to  administrators_users_path do %>管理者ページ<% end %></li>

              <li class="menu-item"><%= link_to  destroy_administrator_session_path, method: :delete do %> 管理者ログアウト</i><% end %></li>
            </div>
          </div>


          <% else %>
        </nav>
            <div class="header-left">
              <li class="logo"><%= link_to products_path do %>ロゴ<% end %></li>
            </div>


              <li class="search">
                <%= form_tag(search_path, :method => 'get') do %>
                  <%= text_field_tag :search %> <!-- searchはカラム名(productsテーブルに、検索用に新しく作成) -->
                  <%= submit_tag '検索' %>
                <% end %>
            <div class="header-right">
              </li>
              <li class="menu-item"><%= link_to new_user_registration_path do %>sign up<% end %></li>

              <li class="menu-item"><%= link_to new_user_session_path do %>login<% end %></li>

              <li class="menu-item"><%= link_to carts_path do %><i class="fa fa-shopping-cart fa-2x "></i><% end %></li>

            </div>

            </ul>

          <% end %>



         <%# サイドバー %>
         <% if administrator_signed_in? %>
          <ul>
            <li><%= link_to "管理者ページ", administrators_top_path %>
            <li><%= link_to "商品一覧", administrators_products_path%></li>
            <li><%= link_to "ユーザ一覧", administrators_users_path %></li>
            <li><%= link_to "商品の追加・入荷", new_administrators_product_path%></li>
            <li><%= link_to "入荷履歴", administrators_arrivals_path %></li>
          </ul>
         <% end %>




    <%= yield %>
  </body>
</html>
