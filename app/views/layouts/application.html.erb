<!DOCTYPE html>
<html>
  <head>
    <title>SmileRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav>
          <% if user_signed_in? %>

              <li><%= link_to products_path do %>ロゴ<% end %></li>

              <li><%= link_to user_path(@user.id) do %>マイページ<% end %>

              <li><%= link_to destroy_user_session_path, method: :delete do %><i class="glyphicon glyphicon-log-out" aria-hidden="true"> logout</i><% end %></li>

              <li><%= link_to carts_path do %>カート<% end %></li>

          <% elsif administrator_signed_in? %>
              <li><%= link_to  products_path do %>ロゴ<% end %></li>

              <li><%= link_to  administrators_users_path do %>管理者ページ<% end %></li>

              <li><%= link_to  destroy_administrator_session_path, method: :delete do %> 管理者ログアウト</i><% end %></li>


          <% else %>

              <li><%= link_to products_path do %>ロゴ<% end %></li>

              <li><%= link_to new_user_registration_path do %>sign up<% end %></li>

              <li><%= link_to new_user_session_path do %>login<% end %></li>

            </ul>

          <% end %>
        </nav>


         <%# サイドバー %>
         <% if administrator_signed_in? %>
          <ul>
            <li><%= link_to "管理者ページ", administrators_top_path %>
            <li><%= link_to "商品一覧", administrators_users_path%></li>
            <li><%= link_to "ユーザ一覧", administrators_users_path %></li>
            <li><%= link_to "新規投稿", administrators_users_path%></li>
            <li><%= link_to "入荷履歴", administrators_users_path%></li>
          </ul>
         <% end %>






    <%= yield %>
  </body>
</html>
