<h1>ユーザ情報編集</h1>
<%= form_for(@user) do |f| %>
<h4>姓（漢字）</h4>
<%= f.text_field :family_name %>
<h4>名（漢字）</h4>
<%= f.text_field :first_name %>
<h4>姓（カナ）</h4>
<%= f.text_field :family_name_kana %>
<h4>名（漢字）</h4>
<%= f.text_field :first_name_kana %>
<h4>郵便番号※半角入力、ハイフン不要</h4>
<%= f.text_field :post %>
<h4>住所</h4>
<%= f.text_field :a_address %>
<h4>電話番号※半角入力、ハイフン不要</h4>
<%= f.text_field :phone %>
<h4>メールアドレス</h4>
<%= f.text_field :email %>
<h4>パスワード</h4>
<%= f.text_field :password %>
<%= f.submit '保存' %>
<% end %>

<diV>マイページへ戻るリンク</diV>
