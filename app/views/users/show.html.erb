      <h5>電話番号※半角入力、ハイフン不要</h5>
      <td><%= @address.phone %></td>

  <h5>メールアドレス</h5>
  <td><%= @user.email %></td>


<td><%= link_to 'Edit', edit_user_path(@user.id) %></td>

