<h4>購入履歴一覧</h4>
    <p>新着順▼</p>
      <% @receipts.each do |receipt| %>
        <p>注文日：<%= receipt.created_at %></p>
        <p>注文者：<%= receipt.purchaser_family_name%><%= receipt.purchaser_first_name %></p>
        <p>
         配送ステータス：
         <%= form_for receipt, url: receipt_path(receipt.id) do |f| %>
         <%= f.select :status, [["受付", "0"], ["準備中", "1"], ["配送済み", "2"]], :selected =>receipt.status_before_type_cast %>
         <%= f.submit "保存" %>
      <% end %>
    </p>
<% @receipt_items.each do |item| %>
    <%= attachment_image_tag item, :product_image_id, format: 'jpeg', fallback: 'no_image_jpg', size: '40x40' %>
    <%= item.product_name %>

<% end %>
        <p>送付先</p>
    <%= receipt.delivery_address %>
        <p>決済方法</p>
        <%= receipt.settlement %>
        <p>小計：　<%= receipt.total_price_without_tax %>円</p>
        <p>消費税：<%= receipt.tax_price.floor%>円</p>
        <p>送料：  500円</p>
        <p>購入価格総計：<%= receipt.total_price.floor %></p>
    <% end %>
 <%= paginate @receipts %>