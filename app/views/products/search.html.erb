
<h2>検索結果</h2>

<ul>
   <% @products.each do |product| %>
	<li>
	  <%= attachment_image_tag product, :product_image, fallback: "no_image.jpg", size: "100x100" %>
	  <%= link_to product.product_name, product_path(product.id) %>
	  <%= (product.price*1.1).floor %>円（税込み）%>
	  <%# .floorは小数点以下切り捨て %>
	  <%= product.status %>
	</li>
   <% end %>
</ul>

