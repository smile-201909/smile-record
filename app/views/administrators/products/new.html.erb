

<h2>商品新規追加</h2>
<% if @product.errors.any? %>
    <ul>
        <% @product.errors.full_messages.each do |message| %>
            <li>
                <%= message %>
            </li>
        <% end %>
    </ul>
<% end %>

<div class="post-product">

<%= form_for(@product, url: administrators_products_path) do |f| %>

        <div class="add-item">
            <div>
            <%= f.label :artist_id, :class=>'label' %>
            <%= f.collection_select :artist_id, Artist.all, :id, :artist_name, :prompt => '選んでください' %>
            </div>

            <div id="artist-outer">
            <!-- ここに　artist/new ページをインクルード -->
            </div>
        </div>

        <div class="add-item">
            <div>
            <%= f.label :genre_id, :class=>'label' %>
            <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => '選んでください' %>
            </div>

            <div id="genre-outer">
            <!-- ここに　genre/new ページをインクルード -->
            </div>
        </div>

        <div class="add-item">
            <div>
            <%= f.label :label_id, :class=>'label' %>
            <%= f.collection_select :label_id, Label.all, :id, :label_name, :prompt => '選んでください' %>
            </div>

            <div id="label-outer">
            <!-- ここに　label/new ページをインクルード -->
            </div>
        </div>

        <div class="add-item">
            <div><%= f.label :product_name, :class=>'label' %></div>
            <div><%= f.text_field :product_name %></div>
        </div>
        <div class="add-item">
                <div><%= f.label :product_image, :class=>'label' %></div>
                <div><%= f.attachment_field :product_image %></div>
        </div>

            <div class="add-item">
                <div><%= f.label :status, :class=>'label' %></div>
                <div><%= f.select :status, Product.statuses.keys.to_a, {}, class: 'form-control' %></div>
            </div>
            <div class="add-item">
                <div><%= f.label :price, :class=>'label' %></div>
                <div><%= f.number_field :price %></div>
            </div>
            <div class="add-item">
                    <%= f.fields_for 'arrivals' do |arrival| %>
                        <div><%= f.label :arrival_amount, :class=>'label' %></div>
                        <!-- ↓ label の機能追加のため、id:"product_arrival_amount" を追加(検証) -->
                        <!-- アソシエーションのaccepts_nested_attributes_forでidが変わっているため -->
                        <div><%= arrival.number_field :arrival_amount, id:"product_arrival_amount" %>枚</div> <!-- 一番左のarrivalは上の行で定義した変数 -->
                    <% end %>
            </div>

            <div class="add-item disc-add">

                <%= f.fields_for 'discs' do |disc| %>
                    <%= render 'products/disc_fields', f: disc %> <!-- cocoonの仕様の表記。renderで、_disc_fields.html.erb を呼び出す -->
                <% end %>
                <div class = “links”>
                    <%= link_to_add_association 'ディスクを追加',f, :discs %>
                </div>

            </div>
            <div class="product-submit">
            <%= f.submit '保存',:class=>'button p-submit' %>
            </div>


<% end %>

</div>
