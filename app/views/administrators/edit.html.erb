<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <% if @user.errors.any? %>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
        		    <% end %>
            </ul>
        <% end %>
        <h1>ユーザ情報編集</h1>
          <%= form_for(@user, url: administrators_user_path(@user.id)) do |f| %>
            <div class="box1">
              <div class="name1">
                <h4>姓（漢字）</h4>
                <%= f.text_field :family_name,:class=>"form" %>
              </div>
              <div class="name1">
                <h4>名（漢字）※全角入力</h4>
                <%= f.text_field :first_name,:class=>"form" %>
              </div>
              <div class="name1">
                <h4>姓（カナ）</h4>
                <%= f.text_field :family_name_kana,:class=>"form" %>
              </div>
              <div class="name1">
                <h4>名（カナ）※全角入力</h4>
                <%= f.text_field :first_name_kana,:class=>"form" %>
              </div>

              <%= f.fields_for :addresses, @user.addresses.first do |i| %>
          　　　　<h4>住所の名前</h4>
                <%= i.text_field :pulldown_name %>
                <h4>郵便番号※半角入力、ハイフン不要</h4>
                <%= i.text_field :post %>
                <h4>住所</h4>
                <%= i.text_field :a_address %>
                <h4>電話番号※半角入力、ハイフン不要</h4>
                <%= i.text_field :phone %>
              <% end %>
              <h4>メールアドレス</h4>
              <%= f.text_field :email %>
              <p class="text-center">
                <%= f.submit '保存', class: 'update' %>
              </p>
            </div>
          <% end %>
    </div>
  </div>
</div>

