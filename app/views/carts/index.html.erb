<h2>ショッピングカート</h2>
<div>
	<% if @cart_products.empty? %>
		<h3>カート内に商品がありません。</h3>
	<% else %>
		<%= @cart_products.each do |cart|%>

			<%= link_to product_path(cart.product_id) do %><%= attachment_image_tag cart, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><% end %><%# これは仮のno image画像%>
			<%= link_to cart.product_name, product_path(cart.product_id)%>
			<%= cart.price + "円（税込み）" %>

		<% end %>
	<% end %>

	

	<%= link_to "もっと買い物をする", products_path%>
</div>