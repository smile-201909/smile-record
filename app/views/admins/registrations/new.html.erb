<h2>ユーザ会員登録</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div><%= f.label :family_name, "姓（漢字）" %><br />
  <%= f.text_field :family_name %></div>

<div><%= f.label :first_name, "名（漢字）" %><br />
  <%= f.text_field :first_name %></div>

<div><%= f.label :family_name_kana, "姓（カナ）" %><br />
  <%= f.text_field :family_name_kana %></div>

<div><%= f.label :first_name_kana, "名（カナ）" %><br />
  <%= f.text_field :first_name_kana %></div>


<%= f.fields_for :address do |i| %>

<div><%= i.label :post, "郵便番号" %><br />
  <%= i.text_field :post %></div>

  <div><%= i.label :a_address, "住所" %><br />
  <%= i.text_field :a_adress %></div>

<div><%= i.label :phone, "電話番号" %><br />
  <%= i.text_field :phone %></div>

  <% end %>

<div class="field">
  <%= f.label :email, "メールアドレス" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :password, "パスワード" %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="field">
  <%= f.label :password_confirmation, "パスワード再確認" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="actions">
  <%= f.submit "会員登録" %>
</div>
<% end %>
<h3>すでにアカウントはお持ちですか？</h3>
<div>ログイン画面へ</div>

